= render "/shared/header"

.write-contents
  .container
    = form_for [@movie] do |f|
      .container__title
        %h2 Edit Movie
      .container__text
        = f.label :タイトル
        = f.text_field :title, class: 'input-default', placeholder: '映画のタイトルを入力してください'
        = f.label :監督
        = f.text_field :director, class: 'input-default', placeholder: '監督名を入力してください'
        = f.label :映画の画像
        - if @movie.image.present?
          = image_tag @movie.image.url, id: :img_prev,size: "200x250"
        - else
          = image_tag "NoImage.png", id: :img_prev,size: "100x150"
        = f.file_field :image,class: 'image-default',id: :note_img
        = f.submit '更新する', class: 'write-btn'
        
= render "/shared/footer"