= render "/shared/header"

.single-main
  .login-single-container
    .login-single-head
      = link_to destroy_user_session_path, method: :delete,class: "user-newsession" do
        ログアウト
    = form_for(current_user,class: "login-single-innner") do |f|
      .login-single-content
        %h2 ユーザー情報を編集
        .form-group
          = f.label :ニックネーム
          = f.text_field :nickname, autofocus: true, placeholder: "ニックネーム",required: "required", class: 'login-input-default'
        .form-group
          = f.label :メールアドレス
          = f.text_field :email, autofocus: true, placeholder: "メールアドレス",required: "required", class: 'login-input-default'
        .form-group
          = f.submit "更新する", class: "user-login"

= render "/shared/footer"